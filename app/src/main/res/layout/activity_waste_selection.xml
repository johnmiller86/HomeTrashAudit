<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chefj.hometrashaudit.WasteSelectionActivity"
    android:background="@drawable/broken_bark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        android:id="@+id/materialTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:background="#b7ffab"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:id="@+id/categoryTextView"
        android:layout_below="@+id/materialSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp"
        android:background="#b7ffab"
        android:textSize="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/textView3"
        android:layout_above="@+id/addButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="108dp"
        android:background="#b7ffab"
        android:textSize="20dp"
        android:layout_marginTop="88dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Audit"
        android:id="@+id/addButton"
        android:layout_alignParentBottom="true"
        android:background="#b7ffab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/materialSpinner"
        android:entries="@array/material_array"
        android:layout_alignTop="@+id/materialTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dropdown"
        android:background="#b7ffab"
        android:layout_toRightOf="@+id/categoryTextView"
        android:minHeight="40dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categorySpinner"
        android:layout_alignTop="@+id/categoryTextView"
        android:spinnerMode="dropdown"
        android:background="#b7ffab"
        android:layout_alignLeft="@+id/materialSpinner"
        android:minHeight="40dp"
        android:layout_alignRight="@+id/materialSpinner" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/amountField"
        android:layout_alignTop="@+id/textView3"
        android:background="#b7ffab"
        android:layout_alignLeft="@+id/categorySpinner"
        android:layout_alignStart="@+id/categorySpinner"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/categorySpinner"
        android:layout_alignEnd="@+id/categorySpinner"
        android:minHeight="60dp" />
</RelativeLayout>
