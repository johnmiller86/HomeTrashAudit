<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chefj.hometrashaudit.FirstTimeActivity"
    android:background="@drawable/broken_bark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Home Trash Audit!"
        android:id="@+id/greetingTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#b7ffab"
        android:focusable="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsTextView"
        android:layout_below="@+id/greetingTextView"
        android:layout_marginTop="83dp"
        android:background="#b7ffab"
        android:text="@string/Instructions"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignLeft="@+id/greetingTextView"
        android:layout_alignStart="@+id/greetingTextView"
        android:layout_alignRight="@+id/greetingTextView"
        android:layout_alignEnd="@+id/greetingTextView" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unitSpinner"
        android:entries="@array/container_array"
        android:spinnerMode="dropdown"
        android:background="#b7ffab"
        android:layout_marginTop="77dp"
        android:longClickable="false"
        android:minHeight="60dp"
        android:layout_below="@+id/instructionsTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/okButton"
        android:layout_alignRight="@+id/okButton"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/okButton"
        android:layout_alignParentBottom="true"
        android:background="#b7ffab"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
