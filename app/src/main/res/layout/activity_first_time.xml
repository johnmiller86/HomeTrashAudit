<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.FirstTimeActivity"
    android:background="@drawable/broken_bark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_home_trash_audit"
        android:id="@+id/greetingTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:focusable="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsTextView"
        android:layout_below="@+id/greetingTextView"
        android:layout_marginTop="83dp"
        android:background="@drawable/button"
        android:text="@string/Instructions"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignStart="@+id/greetingTextView"
        android:layout_alignEnd="@+id/greetingTextView" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unitSpinner"
        android:entries="@array/container_array"
        android:spinnerMode="dropdown"
        android:background="@drawable/button"
        android:layout_marginTop="77dp"
        android:longClickable="false"
        android:minHeight="60dp"
        android:layout_below="@+id/instructionsTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/okButton"
        android:layout_alignEnd="@+id/okButton"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:id="@+id/okButton"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
